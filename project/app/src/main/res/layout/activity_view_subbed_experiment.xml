<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:id="@+id/top_space"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentTop="true" />

    <Space
        android:id="@+id/left_space"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true" />

    <Space
        android:id="@+id/right_space"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

    <LinearLayout
        android:id="@+id/basic_info_LL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_space"
        android:layout_toRightOf="@id/left_space"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exp_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="left|center_vertical"
            android:text="Experiment Name"
            android:textColor="@color/custom_Blue_dark"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exp_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="24dp"
                android:text="TextView"
                android:textSize="12sp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/owner_chip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/custom_Blue_dark"
                app:chipBackgroundColor="@color/custom_Blue_light" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_linear_layout"
        android:layout_width="363dp"
        android:layout_height="353dp"
        android:layout_below="@id/basic_info_LL"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/exp_description_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/list_info_background"
            android:maxLength="300"
            android:padding="5dp"
            android:text="Description of experiment"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/min_trials_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Minimum Number of Trials:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/current_trials_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Current Trials:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/region_text_view"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:padding="6dp"
            android:text="Region:"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_linear_layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="112dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/unsubscribe_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/custom_Blue_dark"
            android:textColor="@color/custom_Yellow_light"
            android:text="Unsubscribe" />

        <Button
            android:id="@+id/view_data_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:text="view data" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_linear_layout_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/comments_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text="Comments" />

        <Button
            android:id="@+id/add_trial_button"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:text="Add Trial" />
    </LinearLayout>

</RelativeLayout>