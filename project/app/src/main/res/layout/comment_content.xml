<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commentLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="10px"
    android:layout_marginTop="9dp"
    android:layout_marginRight="10px"
    android:layout_marginBottom="9dp">


    <TextView
        android:id="@+id/replyToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="This Be Doth Experiment Name"
        android:textColor="#276678"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/replyToGraphic"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:paddingLeft="1sp"
        android:text="03/12/2021"
        android:textColor="#8a8a8a"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/blankSpace"
        app:layout_constraintTop_toBottomOf="@+id/commenterName" />

    <ImageView
        android:id="@+id/replyToGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/blankSpace"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <ImageView
        android:id="@+id/newThreadGraphic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/blankSpace"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/commenterName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textColor="@color/custom_Yellow_dark"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/blankSpace"
        app:layout_constraintTop_toBottomOf="@+id/replyToText" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textColor="@color/custom_Grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/blankSpace"
        app:layout_constraintTop_toBottomOf="@+id/commentDate" />

    <TextView
        android:id="@+id/blankSpace"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:height="200dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line1.1"
        app:tint="@color/custom_Yellow_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="200dp"
        app:layout_constraintStart_toStartOf="@+id/blankSpace"
        app:layout_constraintTop_toTopOf="@+id/replyToGraphic"
        app:srcCompat="@android:drawable/status_bar_item_background" />

    <ImageView
        android:id="@+id/line2"
        app:tint="@color/custom_Yellow_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1.1"
        app:srcCompat="@android:drawable/status_bar_item_background" />

    <ImageView
        android:id="@+id/line3.1"
        app:tint="@color/custom_Yellow_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarSize="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line2"
        app:srcCompat="@android:drawable/status_bar_item_background" />


</androidx.constraintlayout.widget.ConstraintLayout>